{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        
        "vmsconfig": {
            "type": "object",
            "metadata": {
                "description": "description"
            },
            "defaultValue" : {
                "vmPrefix": "VM",
                "VNetName": "VNet1",
                "VmCount" : 1 ,
                "SubnetName": "Subnet1"

            }
        },

        "vmPrefix": {
            "type": "string",
            "defaultValue": "VM"
        },
        "VNetName": {
            "type": "string",
            "defaultValue": "VNet1"
        },
  
    
        "VmCount" : {
            "type": "int" ,
            "defaultValue": 1
        },
        "SubnetName" : {
            "type": "string",
            "defaultValue": "Subnet1"
        },
        "adminPassword" : {
            "type" : "securestring"

        }

    },

    "variables" : {
        "adminUsername":  "luct"
        },

   "resources": [
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2021-02-01",
            "name": "[concat(format('{0}{1}{2}{3}', parameters('vmsconfig').vmPrefix, copyIndex('netIntCopy'),parameters('vmsconfig').VNetName,parameters('vmsconfig').SubnetName), 'NetInt')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "netIntCopy",
                "count": "[parameters('vmsconfig').VmCount]"
            },
            "dependsOn" : [ "[concat( 'Microsoft.Network/virtualNetworks/subnets/', parameters('vmsconfig').vnetName, parameters('vmsconfig').SubnetName) ]" ], 
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vmsconfig').VNetName, parameters('vmsconfig').SubnetName)]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-07-01",
            "name": "[format('{0}{1}{2}{3}', parameters('vmsconfig').vmPrefix, copyIndex(),parameters('vmsconfig').VNetName,parameters('vmsconfig').SubnetName)]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "vmCopy",
                "count": "[parameters('vmsconfig').VmCount]"
            },
            "dependsOn" : [ "[concat(format('Microsoft.Network/networkInterfaces/{0}{1}{2}{3}', parameters('vmsconfig').vmPrefix, copyIndex(),parameters('vmsconfig').VNetName,parameters('vmsconfig').SubnetName), 'NetInt')]" ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "osProfile": {
                    "computerName":  "[format('{0}{1}{2}{3}', parameters('vmsconfig').vmPrefix, copyIndex(),parameters('vmsconfig').VNetName,parameters('vmsconfig').SubnetName)]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(format('{0}{1}{2}{3}', parameters('vmsconfig').vmPrefix, copyIndex(),parameters('vmsconfig').VNetName,parameters('vmsconfig').SubnetName), 'NetInt'))]"
                        }
                    ]
                }
            }
        }
    ]
}

